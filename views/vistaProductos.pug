extends layouts/main.pug

block vista
    style.
        body{
            padding: 10px;
        }
        .table td, .table th {
            vertical-align: middle;
            padding: 10px;
            background-color: rgb(26, 24, 24);
            color: white; 
        }
        h1 {
            color: blue;
        }
        table{
        border-collapse: collapse;
        }
        .fondo{
            background-color: rgba(219, 217, 217, 0.812);
            height: 660px;
            width: 400px;
            font-size: 20px;
            padding: 10px;
        }
        img{
        width: 50px;
        height: 50px;
        }
        .botonProductos{
        background-color: rgb(80, 80, 234);
        padding: 5px;
        border-radius: 5px;
        text-decoration: none;
        color:black;
        }

    div(class="fondo")
        h1='Vista de Productos'
        br
        if hayProductos
            div()
                table(class="table")
                    tr
                        th='Nombre'
                        th='Precio'
                        th='Foto'
                        each producto in productos
                            tr
                                td=producto.name
                                td=producto.price
                                td
                                    img(width="50" src=producto.thumbnail alt="not found")
        else
            h3()='No se encontraron productos'
        br
        a(href="/" type="button" class="botonProductos")='Cargar un nuevo producto'
